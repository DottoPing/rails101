<div class="span12">
  <h2> My Groups </h2>
  <table class="table">
    <thead> <tr>
        <td> # </td>
        <td> Title </td>
        <td> Descroption </td>
        <td> Post Count </td>
        <td> Last Update </td>
      </tr>
    </thead>
    <tbody>
    <% @group.each do |group| %>
      <tr>
      <td> # </td>
      <td> <%= link_to(truncate(group.title, :length => 17), group_path(group)) %> </td>
      <td> <%= group.description %> </td>
      <td> <%= group.posts.count %> </td>
      <td> <%= group.updated_at.to_s(:short) %> </td>
    </tr>
  <% end %>
    </tbody>
  </table>
</div>
